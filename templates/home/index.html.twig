{% extends 'base.html.twig' %}

{% block title %}Starlight - Accueil{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {{ encore_entry_link_tags('navbarStyle') }}
    {{ encore_entry_link_tags('homepageStyle') }}
{% endblock %}

{% block body %}
{{parent()}}
<section class="h-fit sm:h-[calc(theme('height.screen')-80px)] block lg:flex bg-base">
    <div class="h-fit sm:h-[calc(theme('height.screen')/2-40px)] lg:h-full flex w-full lg:w-1/3">
        <div class="w-full h-full text-white pl-16 pr-16 lg:pr-0 py-10 lg:py-24">
            <h1 class="font-scp font-semibold tracking-widest text-4xl sm:text-5xl mb-6">S<span class="border-b-4 border-primary">tarligh</span>t</h1>
            <p class="font-raleway mb-4 sm:text-xl">Nous sommes sûrs que vous serez émerveillé par la beauté et la magie de nos astres.</p>
            <a class="block bg-primary rounded-md py-1 px-8 transition-all hover:bg-indigo-700 w-fit" href="{{path('app_shop')}}">Découvrir la boutique</a>
        </div>
    </div>

    <div id="slider-section" class="h-[calc(theme('height.screen')/2-40px)]">
        <div class="hidden lg:block absolute z-10 border-solid border-t-[calc(theme('height.screen')-80px)] border-t-base border-r-[300px] border-r-transparent"></div>
        <div id="slider">
            <div class="w-full lg:w-2/3 h-[calc(theme('height.screen')/2-40px)] lg:h-[calc(theme('height.screen')-80px)] absolute opacity-0 ease-linear duration-300 bg-cover active-slide" style="background-image: url({{asset('build/images/slide1.webp')}});"></div>
            <div class="w-full lg:w-2/3 h-[calc(theme('height.screen')/2-40px)] lg:h-[calc(theme('height.screen')-80px)] absolute opacity-0 ease-linear duration-300 bg-cover" style="background-image: url({{asset('build/images/slide2.webp')}});"></div>
            <div class="w-full lg:w-2/3 h-[calc(theme('height.screen')/2-40px)] lg:h-[calc(theme('height.screen')-80px)] absolute opacity-0 ease-linear duration-300 bg-cover" style="background-image: url({{asset('build/images/slide3.webp')}});"></div>
            <div class="w-full lg:w-2/3 h-[calc(theme('height.screen')/2-40px)] lg:h-[calc(theme('height.screen')-80px)] absolute opacity-0 ease-linear duration-300 bg-cover" style="background-image: url({{asset('build/images/slide4.webp')}});"></div>
        </div>
        <div id="choice-slide" class="bg-white rounded-md relative lg:absolute w-32 h-2 ml-3 top-3 lg:top-auto lg:bottom-3 lg:right-4 flex">
            <div data-id='0' class='w-1/4 h-full rounded-l-md ease-linear duration-300 cursor-pointer bg-primary'></div>
            <div data-id='1' class='w-1/4 h-full ease-linear duration-300 cursor-pointer'></div>
            <div data-id='2' class='w-1/4 h-full ease-linear duration-300 cursor-pointer'></div>
            <div data-id='3' class='w-1/4 h-full rounded-r-md ease-linear duration-300 cursor-pointer'></div>
        </div>
    </div>
</section>

<section class="carousel bg-primary">
    <div class='font-raleway font-extralight text-white mt-6 mr-12 text-3xl md:text-5xl text-end'>Notre selection d'articles</div>
    {% for article in articles %}
        {% set counter = (counter | default(0)) + 1 %}
        <div class="carousel-item">
            <div class="carousel-box">
			<div class="title">{{article.title}}</div>
			<div class="num">{{counter}}</div>
			<img src="{{ asset('build/images/' ~ article.img ) }}" alt="{{article.title}}">
		</div>
        </div>
    {% endfor %}
</section>

{% include "includes/_footer.html.twig" %}

{% block javascripts%}
    {{encore_entry_script_tags('navbar')}}
    {{encore_entry_script_tags('homepage')}}
{% endblock %}

{% endblock %}
