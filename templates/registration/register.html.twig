{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

<div class="flex flex-col sm:flex-row h-screen">
    <div class="hidden lg:block sm:w-1/2 h-full bg-cover bg-center">
        <div class="block h-full" style="background-image: url('/build/images/register.0239fb7e.jpg'); background-size: cover; background-position: center;"></div>
    </div>
    
    <div class="md:w-1/2 flex justify-center m-auto">
        <div class="p-6 h-fit bg-white sm:shadow-lg w-11/12 rounded-lg transition-all">
            <h2 class="text-4xl font-medium mb-6 text-center">In<span class="border-b-4 border-indigo-500">scriptio</span>n</h2>
            <ul id="errors" class="text-sm p-4 rounded-md text-white mb-2"></ul>
            {{ form_start(registrationForm, {'attr': {'id': 'form'}}) }}

                {{ form_row(registrationForm.email, {
                    label: 'E-mail :',
                    attr: {
                        class: 'border border-gray-400 py-2 px-3 rounded-lg w-full my-2'
                    }})
                }}

                {{ form_row(registrationForm.pseudonym, {
                    label: 'Pseudonyme :',
                    attr: {
                        class: 'border border-gray-400 py-2 px-3 rounded-lg w-full my-2'
                    }})
                }}

            <div class="lg:flex justify-around">
                {{ form_row(registrationForm.firstname, {
                    label: 'Prénom :',
                    attr: {
                        class: 'border border-gray-400 py-2 px-3 rounded-lg w-full my-2'
                    }})
                }}
                <div class="w-2 hidden lg:block"></div>
                {{ form_row(registrationForm.lastname, {
                    label: 'Nom :',
                    attr: {
                        class: 'border border-gray-400 py-2 px-3 rounded-lg w-full my-2'
                    }})
                }}
            </div>

            <div class="lg:flex justify-around mb-4">
            
                {{ form_row(registrationForm.plainPassword.first, {
                    label: 'Mot de passe :',
                    attr: {
                        class: 'border border-gray-400 py-2 px-3 rounded-lg w-full my-2'
                    }})
                }}
                <div class="w-3 hidden lg:block"></div>
                {{ form_row(registrationForm.plainPassword.second, {
                    label: 'Confirmer le mot de passe :',
                    attr: {
                    class: 'border border-gray-400 py-2 px-3 rounded-lg w-full my-2'
                    }})
                }}
            </div>

            <small class="mb-4 flex">
                {{ form_row(registrationForm.agreeTerms, {label: ' '}) }}
                <span class="ml-2">
                    J’ai lu et j’accepte les
                    <a href="#" class="text-indigo-500">conditions d’utilisation</a>.
                </span>
            </small>

            <div class="flex justify-end">
                <button type="submit" class="bg-indigo-500 text-white py-2 px-4 rounded hover:bg-indigo-600">
                    S'inscrire
                </button>
            </div>
            
        </div>
        {{ form_end(registrationForm) }}
    </div>
    {% block javascripts %}
        {{ encore_entry_script_tags('registration') }}
        {{ parent() }}
    {% endblock %}

    {% endblock %}