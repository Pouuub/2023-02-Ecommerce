<div class="h-52 w-[400px] flex transition hover:scale-105 cursor-pointer">
  <div class="h-full w-32 flex-none bg-cover bg-center rounded-l text-center overflow-hidden" style="background-image: url({{asset('build/images/' ~ article.img)}})" title="{{article.title}}">
  </div>
  <div class="border border-gray-400 bg-white relative rounded-r p-4 flex flex-col justify-between leading-normal font-raleway">
    <div class="mb-8">
      <div class="text-gray-900 font-bold text-xl mb-2">{{article.title}}</div>
      <p class="text-gray-700 text-sm line-clamp-3">{{article.description}}</p>
      <div class="absolute bottom-3 left-3 font-scp text-gray-500">
        {% for category in article.categories %}
          <div>#{{category.title}}</div>
        {% endfor %}
      </div>
      <div class="absolute bottom-3 right-3 font-scp">{{article.price|format_currency('EUR')}} / TTC</div>
    </div>
  </div>
</div>